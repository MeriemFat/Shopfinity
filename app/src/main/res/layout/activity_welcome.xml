<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplicationfin.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_weight="0.75"
        android:background="@color/wheat">

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tools_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@color/wheat"

        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- CardView to create curved corners and add elevation -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/homeIcon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:background="#fff"
                    android:contentDescription="Open Home"
                    app:srcCompat="@drawable/home" />

                <ImageButton
                    android:id="@+id/chatIcon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:background="#FFFFFF"
                    android:contentDescription="Open Chat"
                    app:srcCompat="@drawable/chat" />

                <ImageButton
                    android:id="@+id/favoriteIcon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:background="#FFFFFF"
                    android:contentDescription="Open Chat"
                    app:srcCompat="@drawable/favorite" />

                <ImageButton
                    android:id="@+id/profileIcon"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="0dp"
                    android:background="#FFFFFF"
                    android:contentDescription="Open Profile"
                    app:srcCompat="@drawable/iconperson" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>